{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build/",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "removeComments": true
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "dist"
  ],
  "types": ["typePatches"]
}
