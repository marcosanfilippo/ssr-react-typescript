{
  "name": "ssr-react-typescript",
  "version": "1.0.0",
  "main": "./build/prod/app.js",
  "description": "Boilerplate for Server Side rendered React app in TypeScript.",
  "author": "Marco Sanfilippo Frittola <ingmsanfilippo@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:marcosanfilippo/ssr-react-typescript.git"
  },
  "scripts": {
    "compile:dev": "webpack --config webpack.config.dev.js --mode development",
    "compile": "webpack --config webpack.config.prod.js --mode production",
    "prepare:dev": "npm run clean:build:dev && npm run lint && npm run compile:dev",
    "prepare": "npm run clean:build:prod && npm run lint && npm run compile",
    "start:dev": "node ./build/dev/app.js",
    "start": "node ./build/prod/app.js",
    "test": "jest --watch",
    "prettier:write": "prettier --parser typescript --single-quote --trailing-comma es5 --write \"./**/*.ts\"",
    "format": "npm run prettier:write",
    "precommit": "npm run format",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint --project tsconfig.json -c tslint.json",
    "lint:js:fix": "npm run lint --fix",
    "clean:build:dev": "del 'build/dev/'",
    "clean:build:prod": "del 'build/prod/'",
    "clean:lock": "del 'package-lock.json'",
    "clean:modules": "npm run clean:lock && del 'node_modules/'",
    "watch": "npm run prepare:dev && npx nodemon ./build/dev/app.js --watch ./src/ -e ts,tsx"
  },
  "devDependencies": {
    "del-cli": "^1.1.0",
    "nodemon": "^1.18.2",
    "prettier": "1.13.7",
    "source-map-loader": "^0.2.3",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "axios": "^0.18.0",
    "express": "^4.16.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "ts-loader": "^4.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$"
  }
}
