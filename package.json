{
  "name": "ssr-react-typescript",
  "version": "1.0.0",
  "main": "./build/prod/app.js",
  "description": "Boilerplate for Server Side rendered React app in TypeScript.",
  "author": "Marco Sanfilippo Frittola <ingmsanfilippo@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:marcosanfilippo/ssr-react-typescript.git"
  },
  "scripts": {
    "compile:d": "webpack --config webpack.config.dev.js --mode development",
    "compile": "webpack --config webpack.config.prod.js --mode production",
    "prepare:d": "npm run clean:b:d && npm run lint && npm run compile:d",
    "prepare": "npm run clean:b:p && npm run lint && npm run compile",
    "start:d": "node ./build/dev/app.js",
    "start": "node ./build/prod/app.js",
    "test": "jest --coverage true",
    "test:w": "jest --watch --coverage false",
    "prettier:write": "prettier --parser typescript --single-quote --trailing-comma es5 --write \"./**/*.ts\"",
    "format": "npm run prettier:write",
    "precommit": "npm run format",
    "lint": "npm run lint:ts",
    "lint:ts": "tslint --project tsconfig.json -c tslint.json",
    "lint:js:fix": "npm run lint --fix",
    "clean:b:d": "del 'build/dev/'",
    "clean:b:p": "del 'build/prod/'",
    "clean:lock": "del 'package-lock.json'",
    "clean:modules": "npm run clean:lock && del 'node_modules/'",
    "watch": "npm run prepare:d && npx nodemon ./build/dev/app.js --watch ./src/ -e ts,tsx"
  },
  "devDependencies": {
    "@types/jest": "^23.1.6",
    "@types/react-test-renderer": "^16.0.1",
    "@types/superagent": "^3.8.2",
    "@types/supertest": "^2.0.5",
    "axios-mock-adapter": "^1.15.0",
    "del-cli": "^1.1.0",
    "jest": "^23.4.1",
    "node-mocks-http": "^1.7.0",
    "nodemon": "^1.18.2",
    "prettier": "1.13.7",
    "react-test-renderer": "^16.4.1",
    "source-map-loader": "^0.2.3",
    "superagent": "^3.8.3",
    "supertest": "^3.1.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.9.2",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/react": "^16.4.6",
    "@types/react-dom": "^16.0.6",
    "axios": "^0.18.0",
    "express": "^4.16.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "ts-loader": "^4.4.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
